{
    "name": "spexp",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {},
        "log_spec": true
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "SpexPlus",
        "args": {
            "sr": 16000,
            "n_encoder_filters": 128,
            "speaker_embed_dim": 256,
            "n_resnets": 3,
            "O": 256,
            "Q": 3,
            "P": 256,
            "n_tcn_stacks": 4,
            "n_tcn_blocks_in_stack": 8
        }
    },
    "data": {
        "train": {
            "batch_size": 10,
            "num_workers": 4,
            "datasets": [
                {
                    "type": "LibriSpeechMixedDataset",
                    "args": {
                        "speakers_dataset": "/home/dzhunk/University/dl-audio/speaker_separation/data/librispeech/train-clean-100",
                        "path_mixtures": "/home/dzhunk/University/dl-audio/speaker_separation/data/mixes/train-clean-100",
                        "snr_levels": [-5, -2.5, 0, 2.5, 5],
                        "trim_db": 20,
                        "vad_db": 20,
                        "audio_len": 4,
                        "n_mixes": 30000,
                        "premixed": true
                    }
                }
            ]
        },
        "val": {
            "batch_size": 10,
            "num_workers": 4,
            "datasets": [
                {
                    "type": "LibriSpeechMixedDataset",
                    "args": {
                        "speakers_dataset": "/home/dzhunk/University/dl-audio/speaker_separation/data/librispeech/test-clean",
                        "path_mixtures": "/home/dzhunk/University/dl-audio/speaker_separation/data/mixes/test-clean",
                        "snr_levels": [0],
                        "trim_db": 20,
                        "vad_db": 20,
                        "audio_len": 4,
                        "n_mixes": 10,
                        "premixed": true
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-3
        }
    },
    "loss": {
        "type": "SpexLoss",
        "args": {
            "alpha": 0.1,
            "beta": 0.1
        }
    },
    "metrics": [],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
          "steps_per_epoch": 500,
          "epochs": 100,
          "anneal_strategy": "cos",
          "max_lr": 1e-3,
          "pct_start": 0.07
        }
      },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "speaker_separation",
        "len_epoch": 500,
        "grad_norm_clip": 100
    }
}